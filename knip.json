{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "client": {
      "entry": ["src/index.js"],
      "project": ["src/**/*.{js,jsx,ts,tsx}"]
    }
  },
  "entry": [
    "server.js",
    "scripts/**/*.js",
    "tests/**/*.{js,ts}"
  ],
  "project": [
    "**/*.{js,jsx,ts,tsx}",
    "!**/node_modules/**",
    "!**/dist/**",
    "!**/build/**",
    "!**/.next/**"
  ],
  "ignore": [
    "api/**/*.js",
    "api-docs-setup.js",
    "comprehensive-tests.js",
    "test-*.js",
    "test-*.py",
    "playwright.*.config.ts",
    "**/*.test.js",
    "**/*.spec.js",
    "tests/**",
    "scripts/**",
    "database/**/*.sql",
    "**/*.config.js",
    ".lighthouserc.js",
    "next-env.d.ts",
    "public/**",
    "client/public/**"
  ],
  "ignoreDependencies": [
    "@types/node",
    "eslint-*",
    "@typescript-eslint/*"
  ],
  "ignoreExportsUsedInFile": true,
  "webpack": false,
  "jest": {
    "entry": ["tests/**/*.test.{js,ts}", "tests/**/*.spec.{js,ts}"]
  },
  "playwright": {
    "entry": ["tests/e2e/**/*.{spec,test}.{js,ts}"]
  }
}