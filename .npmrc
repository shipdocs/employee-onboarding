# NPM Security Configuration
# This file enforces security best practices for dependency management

# Set minimum audit level to moderate
audit-level=moderate

# Disable funding messages
fund=false

# Save exact versions to prevent unexpected updates
save-exact=true

# Enable package-lock for reproducible builds
package-lock=true

# Prefer offline cache when available
prefer-offline=true

# Strict SSL for package downloads
strict-ssl=true

# Reject self-signed certificates
reject-unauthorized=true