{
  "mcpServers": {
    "postgres": {
      "command": "uvx",
      "args": ["mcp-server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "postgresql://postgres:[your-db-password]@db.[your-project-ref].supabase.co:5432/postgres"
      },
      "disabled": false,
      "autoApprove": [
        "read_query",
        "list_tables",
        "describe_table",
        "get_schema"
      ]
    },
    "supabase-maritime": {
      "command": "python3",
      "args": ["./scripts/supabase-mcp-server.py"],
      "env": {
        "SUPABASE_URL": "${SUPABASE_URL}",
        "SUPABASE_SERVICE_ROLE_KEY": "${SUPABASE_SERVICE_ROLE_KEY}",
        "SUPABASE_ANON_KEY": "${SUPABASE_ANON_KEY}"
      },
      "disabled": false,
      "autoApprove": [
        "list_tables",
        "describe_table",
        "query_table",
        "get_user_progress",
        "get_training_analytics"
      ]
    }
  }
}