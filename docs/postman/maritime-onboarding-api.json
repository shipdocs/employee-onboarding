              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Safety Training\",\n  \"description\": \"Essential safety procedures\",\n  \"time_limit\": 24,\n  \"passing_score\": 80,\n  \"category\": \"safety\",\n  \"content\": {\n    \"overview\": \"Training content here...\",\n    \"objectives\": [\"Learn safety procedures\"],\n    \"keyPoints\": [\"Always wear PPE\"],\n    \"procedures\": [\"Step 1: Check equipment\"]\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/content/training/phases",
              "host": ["{{base_url}}"],
              "path": ["content", "training", "phases"]
