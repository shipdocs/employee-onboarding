              "raw": "{\n  \"answers\": [\n    {\n      \"question_id\": \"q_1\",\n      \"answer\": \"Option A\"\n    },\n    {\n      \"question_id\": \"q_2\",\n      \"answer\": \"true\"\n    }\n  ],\n  \"time_taken\": 1250\n}"
            },
            "url": {
              "raw": "{{base_url}}/training/quiz/:phase/submit",
