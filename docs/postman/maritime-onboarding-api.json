              "raw": "{\n  \"title\": \"Updated Safety Training\",\n  \"description\": \"Updated description\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/content/training/phases/:id",
              "host": ["{{base_url}}"],
              "path": ["content", "training", "phases", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "phase_123"
                }
              ]
            }
          }
        }
      ]
    },
    {
