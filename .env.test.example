# Test Environment Configuration
NODE_ENV=test

# Database Configuration
TEST_SUPABASE_URL=your_test_supabase_url_here
TEST_SUPABASE_SERVICE_KEY=your_test_service_key_here
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_db

# Docker Test Configuration
POSTGRES_PASSWORD=your_test_postgres_password_here
MINIO_SECRET_KEY=your_test_minio_secret_here

# API Configuration
TEST_BASE_URL=http://localhost:3000
TEST_API_TIMEOUT=10000

# Email Configuration (for testing)
TEST_EMAIL_PROVIDER=mock
TEST_SMTP_HOST=localhost
TEST_SMTP_PORT=1025
TEST_SMTP_USER=test
TEST_SMTP_PASS=test
TEST_EMAIL_FROM=test@shipdocs.app

# Test User Configuration
TEST_ADMIN_EMAIL=admin@shipdocs.app
TEST_ADMIN_PASSWORD=your_test_admin_password_here
TEST_MANAGER_EMAIL=manager@shipdocs.app
TEST_MANAGER_PASSWORD=your_test_manager_password_here

# Feature Flags for Testing
ENABLE_TEST_ROUTES=true
ENABLE_EMAIL_MOCKING=true
ENABLE_PDF_MOCKING=true
ENABLE_STORAGE_MOCKING=true

# Performance Testing
PERFORMANCE_TEST_DURATION=30000
PERFORMANCE_REQUEST_INTERVAL=100
PERFORMANCE_CONCURRENT_USERS=10

# Security (Test Keys - Not for Production)
JWT_SECRET=your_test_jwt_secret_key_here
ENCRYPTION_KEY=your_test_encryption_key_32_chars_here

# External Services (Mock URLs for Testing)
MOCK_EMAIL_SERVICE_URL=http://localhost:8025
MOCK_STORAGE_SERVICE_URL=http://localhost:9000
MOCK_PDF_SERVICE_URL=http://localhost:8080

# Test Data Configuration
TEST_DATA_CLEANUP=true
TEST_DATA_SEED=true
TEST_PARALLEL_EXECUTION=false

# Logging Configuration
LOG_LEVEL=error
TEST_LOG_FILE=tests/logs/test.log
ENABLE_TEST_LOGGING=false
